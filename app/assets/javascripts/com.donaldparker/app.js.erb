angular.module('com.donaldparker', ['ngRoute'])
.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider){
	$locationProvider.html5Mode(true);
	$routeProvider.when('/about', {templateUrl:'<%= asset_path("about.html") %>', controller:'com.donaldparker.controllers.AboutPageCtrl'});
	$routeProvider.when('/contact', {templateUrl:'<%= asset_path("contact.html") %>', controller:'com.donaldparker.controllers.ContactPageCtrl'});
	$routeProvider.when('/log-in', {templateUrl:'<%= asset_path("login.html") %>', controller:'com.donaldparker.controllers.SingInPageCtrl'})
	$routeProvider.when('/services', {templateUrl:'<%= asset_path("service.html") %>', controller:'com.donaldparker.controllers.ServicePageCtrl'});
	$routeProvider.when('/sign-up', {templateUrl:'<%= asset_path("signup.html") %>', controller:'com.donaldparker.controllers.SingUpPageCtrl'})
	$routeProvider.when('/', {templateUrl:'<%= asset_path("home.html") %>', controller:'com.donaldparker.controllers.HomePageCtrl'})
	$routeProvider.otherwise({redirectTo: '/'});
}])
.controller('com.donaldparker.controllers.AppCtrl', ['$scope', '$location', function($scope, $location){
	console.log('application controller');

	$scope.goTo = function(url, data){
		$location.path(url);
	}
}])
